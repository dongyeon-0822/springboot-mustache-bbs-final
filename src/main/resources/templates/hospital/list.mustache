{{>layouts/header}}
<form class="container" action="/hospitals" method="get">
    <div class="mb-3">
        <label class="form-label">도로명 주소 검색</label>
        <input type="text" class="form-control" name="keyword" placeholder="도로명 주소를 검색하세요. ">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">No</th>
        <th scope="col">이름</th>
        <th scope="col">도로명주소</th>
    </tr>
    </thead>
    <tbody>
    {{#hospitals}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/hospitals/{{id}}">{{hospitalName}}</a></td>
            <td>{{roadNameAddress}}</td>
        </tr>
    {{/hospitals}}
    </tbody>
</table>
<div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
    <a href="?page={{previous}}" type="button" class="btn btn-outline-dark">Previous</a>
    <a href="?page={{next}}" type="button" class="btn btn-outline-dark">Next</a>
</div>
{{>layouts/footer}}